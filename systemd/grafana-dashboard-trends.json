{
  "dashboard": {
    "title": "Raspberry Pi Video Recorder - Production Monitoring",
    "description": "Trend-focused dashboard for production monitoring",
    "tags": ["raspberry-pi", "video-recorder", "production"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "1m",
    "panels": [
      {
        "title": "System Health Trends",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
        "collapsed": false
      },
      {
        "title": "CPU Usage",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 1 },
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\",job=\"node\"}[5m])) * 100)",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "showPoints": "never"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 70, "color": "yellow" },
                { "value": 90, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        }
      },
      {
        "title": "CPU Temperature",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 1 },
        "targets": [
          {
            "expr": "node_hwmon_temp_celsius{job=\"node\"}",
            "legendFormat": "Temp Â°C",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "min": 0,
            "max": 100,
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "showPoints": "never"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 70, "color": "yellow" },
                { "value": 80, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "title": "RAM Usage",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 1 },
        "targets": [
          {
            "expr": "100 * (1 - (node_memory_MemAvailable_bytes{job=\"node\"} / node_memory_MemTotal_bytes{job=\"node\"}))",
            "legendFormat": "RAM %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "showPoints": "never"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 80, "color": "yellow" },
                { "value": 95, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "title": "Disk Space Available",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 1 },
        "targets": [
          {
            "expr": "node_filesystem_avail_bytes{job=\"node\",mountpoint=\"/\"} / 1024 / 1024 / 1024",
            "legendFormat": "Free GB",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "min": 0,
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10,
              "showPoints": "never"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "title": "Recording Statistics",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 9 },
        "collapsed": false
      },
      {
        "title": "Total Recordings",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 10 },
        "targets": [
          {
            "expr": "sum(recorder_videos_total{job=\"recorder\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "blue" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value"
        }
      },
      {
        "title": "Successful Uploads",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 10 },
        "targets": [
          {
            "expr": "recorder_videos_total{job=\"recorder\",status=\"completed\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value"
        }
      },
      {
        "title": "Failed Uploads",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 10 },
        "targets": [
          {
            "expr": "recorder_videos_total{job=\"recorder\",status=\"failed\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value"
        }
      },
      {
        "title": "Upload Success Rate",
        "type": "gauge",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 10 },
        "targets": [
          {
            "expr": "recorder_upload_success_rate{job=\"recorder\"} * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 80, "color": "yellow" },
                { "value": 95, "color": "green" }
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "title": "Video Counts Over Time",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
        "targets": [
          {
            "expr": "recorder_videos_total{job=\"recorder\"}",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 0,
              "showPoints": "never"
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": ["last", "max"]
          }
        }
      },
      {
        "title": "Operational Metrics",
        "type": "row",
        "gridPos": { "h": 1, "w": 24, "x": 0, "y": 22 },
        "collapsed": false
      },
      {
        "title": "Service Uptime",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 23 },
        "targets": [
          {
            "expr": "recorder_uptime_seconds{job=\"recorder\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "blue" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value"
        }
      },
      {
        "title": "Service Restarts",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 23 },
        "targets": [
          {
            "expr": "recorder_restart_count{job=\"recorder\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 3, "color": "yellow" },
                { "value": 10, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value"
        }
      },
      {
        "title": "Error Count",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 23 },
        "targets": [
          {
            "expr": "recorder_error_count{job=\"recorder\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background",
          "textMode": "value"
        }
      },
      {
        "title": "Internet Status",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 23 },
        "targets": [
          {
            "expr": "recorder_internet_connected{job=\"recorder\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "value": "1", "text": "CONNECTED" },
              { "type": "value", "value": "0", "text": "DISCONNECTED" }
            ],
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value"
        }
      },
      {
        "title": "Raspberry Pi Uptime",
        "type": "stat",
        "gridPos": { "h": 4, "w": 12, "x": 0, "y": 27 },
        "targets": [
          {
            "expr": "time() - node_boot_time_seconds{job=\"node\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "blue" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value"
        }
      },
      {
        "title": "Pi Reboot History",
        "type": "timeseries",
        "gridPos": { "h": 4, "w": 12, "x": 12, "y": 27 },
        "targets": [
          {
            "expr": "changes(node_boot_time_seconds{job=\"node\"}[7d])",
            "legendFormat": "Reboots (7d)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": { "mode": "palette-classic" },
            "custom": {
              "drawStyle": "bars",
              "lineInterpolation": "linear",
              "fillOpacity": 50,
              "showPoints": "never"
            }
          }
        },
        "options": {
          "legend": { "displayMode": "list", "placement": "bottom" }
        }
      }
    ]
  },
  "overwrite": true
}
